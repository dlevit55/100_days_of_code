from menu import Menu, MenuItem
from coffee_maker import CoffeeMaker
from money_machine import MoneyMachine

drink_menu = Menu()
make_coffee = CoffeeMaker()
money_calc = MoneyMachine()

latte = MenuItem(name="latte",water=200,milk=150,coffee=24,cost=2.5)
cappuccino = MenuItem(name="cappuccino",water=250,milk=100,coffee=24,cost=3.0)
espresso = MenuItem(name="espresso",water =50, milk=0,coffee=24,cost=2.5)

keep_drinking = True
while keep_drinking:
    user_choice = input(f"What would you like? :{drink_menu.get_items()} ? ")

    if user_choice == "off":
        keep_drinking = False
    elif user_choice == "report":
        make_coffee.report()
        money_calc.report()
    elif user_choice == "latte":

        if make_coffee.is_resource_sufficient(latte):
            money_calc.make_payment(latte.cost)
            make_coffee.make_coffee(latte)

    elif user_choice == "espresso":
        if make_coffee.is_resource_sufficient(espresso):
            money_calc.make_payment(espresso.cost)
            make_coffee.make_coffee(espresso)
    elif user_choice == "cappuccino":
        if make_coffee.is_resource_sufficient(cappuccino):
            money_calc.make_payment(cappuccino.cost)
            make_coffee.make_coffee(cappuccino)
    else:
        print("please enter a valid name of a drink")

